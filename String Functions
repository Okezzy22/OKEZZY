--String Functions - TRIM, LTRIM, RTRIM, Replace, Substring, Upper, Lower

-- DROP PREV TABLE
DROP TABLE [dbo].[HouseErrors]

-- CREATE NEW TABLE
CREATE TABLE HouseError 
( HOUSEID INT,
STATE VARCHAR(30),
BEDROOM INT, 
BATHROOM INT, 
YEAR INT,
PRICE INT
);

INSERT INTO HouseError VALUES (120, 'TEXAS ', 5, 4, 2019, 550000)
INSERT INTO HouseError VALUES (121, ' UTAH', 4, 3, 2015, 370000)
INSERT INTO HouseError VALUES (122, 'NEW - YORK', 2, 1, 2015, 1450000)

SELECT * FROM HouseError

--USING TRIM, LTRIM AND RTRIM 

SELECT STATE, TRIM(STATE) AS STATETRIM
FROM HouseError

SELECT STATE, LTRIM(STATE) AS L_STATETRIM
FROM HouseError

SELECT STATE, RTRIM(STATE) AS R_STATETRIM
FROM HouseError

--USING REPLACE
SELECT STATE, REPLACE(STATE, 'NEW - YORK','NEWYORK') AS STATEFIXED
FROM HouseError

--USING SUBSCRIPTS
SELECT SUBSTRING([dbo].[HouseError].State,1,2),SUBSTRING([dbo].[HOUSEPRICES_CA].PROVINCE, 1,4)
FROM HouseError
JOIN [dbo].[HOUSEPRICES_CA]
ON SUBSTRING([dbo].[HouseError].STATE,1,2) = SUBSTRING([dbo].[HOUSEPRICES_CA].PROVINCE,1,4)

--USING UPPER AND LOWER
SELECT STATE, LOWER(STATE) AS State
FROM HouseError

SELECT STATE, UPPER(STATE) AS UP_STATE
FROM HouseError


